<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_poi_option_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_poi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clickable="false"
                android:orientation="horizontal"
                android:padding="10dp">


                <TextView
                    android:id="@+id/text_poi_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="名称"
                    android:textColor="@color/colorSettingTitle"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_poi_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"
                    android:text="0米" />

            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_details"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="6dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_info_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="详情"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_share"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="6dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_share_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="分享"
                    android:textSize="12sp"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/text_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_grade_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="收藏"
                    android:textSize="12sp" />



                <TextView
                    android:id="@+id/text_nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawablePadding="3dp"
                    android:drawableLeft="@drawable/ic_map_18dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="附近"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/text_street"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_store_mall_directory_18dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawablePadding="3dp"
                    android:background="@drawable/bg_btn_poi_selector_2"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:text="街景"
                    android:textSize="12sp" />


            </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>